    "layout": {
        "type": "force",
        "params": {
            "iterations": 100,
            "repulsion": 100,
            "attraction": 0.1,
            "gravity": 0.1
        }
    },
    "encoding": {
        "node": {
            "color": {
                "field": "department",
                "type": "nominal"
            },
            "size": {
                "field": "level",
                "type": "quantitative"
            },
            "label": {
                "field": "label"
            }
        },
        "edge": {
            "width": {
                "field": "weight",
                "type": "quantitative"
            },
            "color": {
                "field": "type",
                "type": "nominal"
            }
        }
    },
    "interaction": {
        "node": {
            "draggable": true,
            "hoverable": true,
            "selectable": true,
            "hoverTooltip": {
                "fields": [
                    "label",
                    "department",
                    "level"
                ],
                "format": "{label}\nDept: {department}\nLevel: {level}"
            },
            "highlight": {
                "scale": 1.3,
                "outline": true
            }
        },
        "edge": {
            "hoverable": true,
            "hoverTooltip": {
                "fields": [
                    "type",
                    "weight"
                ],
                "format": "{type} (strength: {weight})"
            }
        }
    },
    "width": 500,
    "height": 500
}